script "CSACS_HitKnockback" (int force)
{
int pusher = ACS_NamedExecuteWithResult("core_gettarget");
int Vang = VectorAngle(GetActorX(0) - GetActorX(pusher), GetActorY(0) - GetActorY(pusher)) >> 8;
ThrustThing(Vang, force, 1, 0);
}

